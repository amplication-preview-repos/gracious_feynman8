datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Voter {
  citizenId String?
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  lastName  String?
  updatedAt DateTime @updatedAt
  votes     Vote[]
}

model Election {
  createdAt   DateTime  @default(now())
  description String?
  endTime     DateTime?
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  startTime   DateTime?
  title       String?
  updatedAt   DateTime  @updatedAt
  votes       Vote[]
}

model Vote {
  candidate  String?
  createdAt  DateTime  @default(now())
  election   Election? @relation(fields: [electionId], references: [id])
  electionId String?   @db.ObjectId
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  timestamp  DateTime?
  updatedAt  DateTime  @updatedAt
  voter      Voter?    @relation(fields: [voterId], references: [id])
  voterId    String?   @db.ObjectId
}

model Block {
  createdAt       DateTime  @default(now())
  hash            String?
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  previousHash    String?
  timestamp       DateTime?
  transactionData String?
  updatedAt       DateTime  @updatedAt
}
